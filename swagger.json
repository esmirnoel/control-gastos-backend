{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Control de Presupuesto",
    "description": "Esta API proporciona acceso a las funcionalidades de Control de Presupuesto ",
    "version": "1.0.0",
    "contact": {
      "name": "Esmir Roque",
      "email": "castellano17@gmail.com",
      "url": "https://www.linkedin.com/in/esmir-roque/"
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "ApiKeyAuth": {
    "type": "apiKey",
    "name": "api_key",
    "in": "header"
  },

  "paths": {
    "/api/v1/users": {
      "get": {
        "tags": ["Usuarios"],
        "summary": "Muestra todos los usuarios",
        "responses": {
          "200": {
            "description": "Al hacer esta petición debería retornar todos los usuarios"
          }
        }
      }
    },
    "/api/v1/users/{id}": {
      "get": {
        "tags": ["Usuarios"],
        "summary": "Muestra un usuario en especifico",
        "parameters": [
          { "name": "id", "in": "path", "type": "string", "required": true }
        ],
        "responses": {
          "200": {
            "description": "Al hacer esta petición obtenemos un usuario en especifico"
          },
          "400": {
            "description": "Bad Request: La petición es inválida o faltan parámetros"
          }
        }
      }
    },
    "/api/v1/users/me": {
      "get": {
        "tags": ["Usuarios"],
        "summary": "Muestra al usuario logueado",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Al hacer esta petición obtenemos el usuario logueado"
          },
          "401": {
            "description": "Unauthorized: El usuario no está autenticado"
          }
        }
      }
    },
    "/api/v1/users/": {
      "post": {
        "tags": ["Usuarios"],
        "summary": "Crea un nuevo usuario",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "firstName": {
                    "type": "string",
                    "description": "El nombre del usuario"
                  },
                  "lastName": {
                    "type": "string",
                    "description": "El apellido del usuario"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "el correo del usuario"
                  },
                  "password": {
                    "type": "string",
                    "format": "password",
                    "description": "la contraseña del usuario"
                  },
                  "birthday": {
                    "type": "string",
                    "format": "date",
                    "description": "La fecha del cumpleaños del usuario"
                  },
                  "phone": {
                    "type": "string",
                    "description": "El telefono del usuario"
                  },
                  "country": {
                    "type": "string",
                    "description": "El pais del usuario"
                  },
                  "gender": {
                    "type": "string",
                    "description": "El género del usuario"
                  }
                },

                "required": ["firstName", "lastName", "email", "password"]
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Al hacer esta petición agregamos un usuario nuevo"
          },
          "400": {
            "description": "Bad Request: La petición es inválida o faltan parámetros"
          }
        }
      }
    },
    "/api/v1/users/update/{id}": {
      "patch": {
        "tags": ["Usuarios"],
        "summary": "Actualiza un usuario",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "El ID del usuario a actualizar",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "minProperties": 1,
                "properties": {
                  "firstName": {
                    "type": "string",
                    "description": "El nombre del usuario"
                  },
                  "lastName": {
                    "type": "string",
                    "description": "El apellido del usuario"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "el correo del usuario"
                  },
                  "password": {
                    "type": "string",
                    "format": "password",
                    "description": "la contraseña del usuario"
                  },
                  "birthday": {
                    "type": "string",
                    "format": "date",
                    "description": "La fecha del cumpleaños del usuario"
                  },
                  "phone": {
                    "type": "string",
                    "description": "El telefono del usuario"
                  },
                  "country": {
                    "type": "string",
                    "description": "El pais del usuario"
                  },
                  "gender": {
                    "type": "string",
                    "description": "El género del usuario"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Al hacer esta petición actulizamos un usuario"
          },
          "400": {
            "description": "Bad Request: La petición es inválida o faltan parámetros"
          }
        }
      }
    },
    "/api/v1/users/delete/{id}": {
      "delete": {
        "tags": ["Usuarios"],
        "summary": "Elimina un usuario en especifico",
        "security": [
          {
            "BearerAuth": [],
            "ApiKeyAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "El ID del usuario a eliminar",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Al hacer esta petición se elimina un usuario en especifico"
          },
          "400": {
            "description": "Bad Request: La petición es inválida o faltan parámetros"
          }
        }
      }
    },

